<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dance"
        android:scaleType="centerCrop"
        android:id="@+id/backimg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come, Learn, Groove"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:textColor="#D32F2F" />
    <ImageView
        android:layout_width="102dp"
        android:layout_height="91dp"
        android:src="@drawable/grooveyou"
        android:id="@+id/logo"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groove You"
        android:textColor="#FF3D00"
        android:textSize="40sp"
        android:layout_above="@+id/forms"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="#FFE57F"
        android:padding="8dp"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Different Dance Forms"
        android:id="@+id/forms"
        android:layout_above="@+id/place"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:textSize="25sp"
        android:background="#FF7043"
        android:layout_toRightOf="@id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phase 10, Mohali"
        android:id="@+id/place"
        android:paddingLeft="5dp"
        android:textSize="21.5sp"
        android:background="#FF7043"
        android:textColor="#000000"
        android:layout_above="@+id/contact"
        android:layout_toRightOf="@id/logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact : 9878338886"
        android:id="@+id/contact"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="21.5sp"
        android:background="#FF7043"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/logo"/>

</RelativeLayout>